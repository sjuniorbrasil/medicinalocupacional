@model SaudeWeb.Models.BancoCaixa

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Financeiro</h2>

@if (ViewBag.erro == null)
{
    <h3>Deseja excluir esse registro?</h3>
}
else
{
    <h3 style="color:red">@ViewBag.erro</h3>
}


<div>
    <h4>Controle de Conta Corrente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PessoaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PessoaDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataEmissaoF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataEmissaoF)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataVencimentoF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataVencimentoF)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataConciliacaoF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataConciliacaoF)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroDocumento)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Obs)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Obs)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.valor)
        </dd>
        <dt>
            @Html.DisplayName("Plano de Contas")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlanoContaDesc)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (ViewBag.PodeExcluir)
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" id="botaoTop" />
            }
            else
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" disabled id="botaoTop" />
            }      
            @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-info btn-sm", @id = "botaoTop" })
        </div>
    }
</div>
