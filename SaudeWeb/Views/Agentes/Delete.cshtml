@model SaudeWeb.Models.Agente

@{
    ViewBag.Title = "Agentes de Risco";
}

<h2>Cadastro</h2>
@if (ViewBag.erro == null)
{
    <h3>Deseja excluir esse registro?</h3>
}
else
{
    <h3 style="color:red">@ViewBag.erro</h3>
}

<div>
    <h4>Agentes de Risco</h4>
    <hr />
    <dl class="dl-horizontal">      

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RiscoDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RiscoDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DanosSaude)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanosSaude)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecomendacaoMedica)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecomendacaoMedica)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (ViewBag.PodeExcluir)
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" id="botaoTop" />
            }
            else
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" disabled id="botaoTop"/>
            }
            
            @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-info btn-sm", @id = "botaoTop" })
        </div>
    }
</div>
