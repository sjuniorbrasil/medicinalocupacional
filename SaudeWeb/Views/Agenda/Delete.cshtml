@model SaudeWeb.Models.Agenda

@{
    ViewBag.Title = "Agenda";
}

<h2>Agenda</h2>
@if (Model.Situacao == 1)
{
    <h3 style="color:red">Registro Finalizado</h3>
}
else
{
    <h3>Deseja excluir esse registro?</h3>
}

<div>
    <h4>Agenda</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeFuncionario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeFuncionario)
        </dd>       

        <dt>
            @Html.DisplayNameFor(model => model.DataAgendado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataHoraFormatada) 
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.Situacao == 1)
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" disabled id="botaoTop"/>
            }
            else
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" id="botaoTop" /> 
            }
            
            @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-info btn-sm", @id = "botaoTop" })
        </div>
    }
</div>
