@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicina Ocupacional - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

    </style>
    <script type='text/javascript'>

        function imprimirRep() {
            var op = $("#imprimir").val();
            if (op == "imprimir") {
                document.getElementById("imprimir").style.visibility = "hidden";
                document.getElementById("voltar").style.visibility = "hidden";
                window.print();
                document.getElementById("imprimir").style.visibility = "visible";
                document.getElementById("voltar").style.visibility = "visible";
            }
        }

    </script>
</head>
<body>

    <div style="width:905px;">        
            @RenderBody()
            <hr />
            <div style="margin-left:750px">
                <button type="button" onClick="history.back()" id="voltar" class="btn btn-default btn-sm">
                    Voltar
                </button>
                <button type="button" onClick="imprimirRep()" id="imprimir" value="imprimir" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-print"></span> Imprimir
                </button>
            </div>
            @*<footer>
                <p>&copy; @DateTime.Now.Year - Produsys Sistemas</p>
            </footer>*@            
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables/jquery.dataTables.js" type="text/javascript"></script>

</body>
</html>

