@model SaudeWeb.Models.Financeiro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Financeiro</h2>

@if (ViewBag.erro == null)
{
    <h3>Deseja excluir esse registro?</h3>
}
else
{
    <h3 style="color:red">@ViewBag.erro</h3>
}
<div>
    <h4>Contas a Pagar/Receber</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ID/Parcela")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDParcela)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroDocumento)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TipoDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmissaoFormatado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmissaoFormatado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VencimentoFormatado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VencimentoFormatado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>     

        <dt>
            @Html.DisplayName("Pessoa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PessoaDesc)
        </dd>        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (ViewBag.PodeExcluir)
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" id="botaoTop" />
            }
            else
            {
                <input type="submit" value="Excluir" class="btn btn-danger btn-sm" disabled id="botaoTop" />
            }
            @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-info btn-sm", @id = "botaoTop" })
        </div>
    }
</div>
