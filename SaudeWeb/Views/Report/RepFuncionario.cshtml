@{
    Layout = null;
}
@model IEnumerable<SaudeWeb.Models.Funcionario>
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicina Ocupacional - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type='text/javascript'>

       function imprimir() {
           var op = $("#imprimir").val();
           if (op == "imprimir") {
               document.getElementById("imprimir").style.visibility = "hidden";
               document.getElementById("btnVoltar").style.visibility = "hidden";
               window.print();
               document.getElementById("imprimir").style.visibility = "visible";
               document.getElementById("btnVoltar").style.visibility = "visible";
           }
       }

    </script>
</head>
<body>
    <div>
        <h2 style="text-align:center">Cadastro de Funcionários</h2>

        <p >___________________________________________________________________________________________________________________________________________________________________________________________</p>
        <div style="margin-left:750px">
            <a id="btnVoltar" href="~/report/repFuncionariofiltro/" class="btn btn-default btn-sm">Voltar</a>
            <button type="button" onClick="imprimir()" id="imprimir" value="imprimir" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
        
        <table >
            <tr>

                <th style="height:5px; width:400px;font-size:10px">
                    Nome 
                </th>
                <th style="height:5px; width:150px;font-size:10px">
                    Telefone
                </th>
                <th style="height:5px; width:150px;font-size:10px">
                    Cidade
                </th>
                <th style="height:5px; width:150px;font-size:10px">
                    CPF
                </th>



            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td style="text-decoration:none">
                        @Html.DisplayFor(modelItem => item.Fone1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cidade.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                </tr>
            }
        </table>
        <footer>
            <p>___________________________________________________________________________________________________________________________________________________________________________________________</p>
            <p>&copy; @DateTime.Now.Year - Heavy Users Sistemas<span style="margin-left:500px">Medicina Ocupacional</span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables/jquery.dataTables.js" type="text/javascript"></script>

</body>
</html>
