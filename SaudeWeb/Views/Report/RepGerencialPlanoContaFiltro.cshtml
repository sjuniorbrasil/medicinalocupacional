<div class="panel panel-default">
    <div id="panelColorido" class="panel-heading">Movimentação Por Plano de Contas<span style="float:right"></span></div>
    <div id="divPesquisa" class="panel-body">
        @using (Html.BeginForm())
            {
            <div class="form-horizontal">
                
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        

                        <div class="form-group col-md-12 row">
                            @Html.Label("Situação", new { @class = "control-label col-md-2" })
                            @Html.DropDownList("Situacao", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        @*<div class="form-group col-md-12 row">
                            @Html.Label("Tipo", new { @class = "control-label col-md-2" })
                            @Html.DropDownList("Tipo", null, htmlAttributes: new { @class = "form-control" })
                        </div>*@
                        <div class="form-group col-md-12 row">
                            @Html.Label("Apuração", new { @class = "control-label col-md-2" })
                            @Html.DropDownList("Apuracao", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-12 row">
                            @Html.Label("Período", new { @class = "control-label col-md-2" })
                            @Html.TextBox("Periodo1", null, new { @class = "form-control  col-md-6", @type = "date" })
                        </div>
                        <div class="form-group col-md-12 row">
                            @Html.Label(" à ", new { @class = "control-label col-md-2" })
                            @Html.TextBox("Periodo2", null, new { @class = "form-control  col-md-6", @type = "date" })
                        </div>                       

                    </div>
                </fieldset>
            </div>

            <input class="btn btn-warning" type="submit" onclick="mostrar()" value="Visualizar" id="botaoTop" />
        }
    </div>
</div>
<script>
    function mostrar() {
        document.getElementById("#btnVoltar").style.display = "block";
        document.getElementById("#divFiltros").style.display = "none"
    }
</script>